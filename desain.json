  "automata_logic": {
    "theory_type": "DFA (Deterministic Finite Automata)",
    "explanation_text": "Sistem ini adalah DFA karena setiap input (aksi user) memetakan state saat ini ke TEPAT SATU state berikutnya secara pasti. Tidak ada ambiguitas atau jalur paralel.",
    "formal_definition_5_tuple": {
      "Q (States)": ["q0 (Lobby)", "q1 (Seat_Selection)", "q2 (Payment_Auth)", "q3 (Ticket_Issued)"],
      "Sigma (Alphabet/Inputs)": ["select_movie", "confirm_seat", "input_pin_valid", "input_pin_invalid", "cancel", "reset"],
      "delta (Transition Function)": "Lihat Tabel Transisi",
      "q0 (Start State)": "q0",
      "F (Final States)": ["q3"]
    },
    "grammar_rules": {
      "type": "Regular Grammar",
      "variables": ["S (Start/q0)", "A (Seat/q1)", "B (Payment/q2)", "C (Ticket/q3)"],
      "productions": [
        "S -> select_movie A",
        "A -> confirm_seat B | cancel S",
        "B -> input_pin_invalid B | input_pin_valid C | cancel S",
        "C -> reset S | epsilon"
      ]
    }
  },
